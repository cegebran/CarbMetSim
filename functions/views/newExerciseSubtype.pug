extends layout

block content
  h1 New Exercise Subtype

  form(method='POST' action='')
    div.form-group
      label(for='exercise_activity') Exercise Activity:
      input#value.form-control(type='text', placeholder='' name='exercise_activity' required='true' value=(''))
    div.form-group
      label(for='intensity') Intensity:
      input#value.form-control(type='text', placeholder='' name='intensity' required='true' value=(''))
    button.btn.btn-primary(type='submit') Submit  

  if errors
    ul
      for error in errors
        li!= error.msg