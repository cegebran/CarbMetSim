extends layout

block content
  h1 Query

  form(method='POST' action='')
    div.form-group
      label(for='activitytype') Activity Type:
      select#activitytype.form-control(type='select', placeholder='' name='activity' required='false' )
        for activitytype in activityTypes
            option(value=activitytype._id) #{activitytype.name}

    div.form-group
      label(for='subTypeExerciseFood') Food/Exercise Activity Types:
      select#subTypeExerciseFood.form-control(type='select', placeholder='' name='foodExerciseActivity' required='false' )
        for allActivitytype in allActivityTypes
            option(value=allActivitytype._id) #{allActivitytype.name}

    div.form-group
      label(for='foodActivitytype') Food Activity Types:
      select#foodActivitytype.form-control(type='select', placeholder='' name='foodActivityType' required='false' )
        for foodActivityType in foodActivityTypes
            option(value=foodActivityType._id) #{foodActivityType.name}

    div.form-group
      label(for='exerciseActivitytype') Exercise Activity Types:
      select#exerciseActivitytype.form-control(type='select', placeholder='' name='exerciseActivity' required='false' )
        for exerciseActivitytype in exerciseActivityTypes
            option(value=exerciseActivitytype._id) #{exerciseActivitytype.name}

    div.form-group
      label(for='start_date') Start Date:
      div.form-inline(id='startDateInLine0')
        select#startMonth0.form-control(type='select', placeholder='', name='startMonthSelection0', required='true')
          for month in months
            option(value=month._id) #{month.name}
        label(id="startDateSep1") / 
        select#startDay0.form-control(type='select', placeholder='', name='startDaySelection0', required='true')
          for day in days31
            option(value=day._id) #{day.name}
        label(id="startDateSep2") / 
        select#startYear0.form-control(type='select', placeholder='', name='startYearSelection0', required='true')
          for year in years
            option(value=year._id) #{year.name}

    div.form-group
      label(id="start_time") Start Time: 
      div.form-inline(id='startTimeInLine0')
        select#startHour0.form-control(type='select', placeholder='', name='startHourSelection0', required='true')
          for hTime in hours
            option(value=hTime._id) #{hTime.name}
        label(id="startTimeSep1") : 
        select#startMinute0.form-control(type='select', placeholder='', name='startMinuteSelection0', required='true')
          for mTime in minutes
            option(value=mTime._id) #{mTime.name}
        select#startAmPm0.form-control(type='select', placeholder='', name='startAmPmSelection0', required='true')
          for amPmSel in amPms
            option(value=amPmSel._id) #{amPmSel.name}

    div.form-group
      label(for='end_date') End Date:
      div.form-inline(id='endDateInLine0')
        select#endMonth0.form-control(type='select', placeholder='', name='endMonthSelection0', required='true')
          for month in months
            option(value=month._id) #{month.name}
        label(id="endDateSep1") / 
        select#endDay0.form-control(type='select', placeholder='', name='endDaySelection0', required='true')
          for day in days31
            option(value=day._id) #{day.name}
        label(id="endDateSep2") / 
        select#endYear0.form-control(type='select', placeholder='', name='endYearSelection0', required='true')
          for year in years
            option(value=year._id) #{year.name}

    div.form-group
      label(id="end_time") End Time: 
      div.form-inline(id='endTimeInLine0')
        select#endHour0.form-control(type='select', placeholder='', name='endHourSelection0', required='true')
          for hTime in hours
            option(value=hTime._id) #{hTime.name}
        label(id="endtimeSep1") : 
        select#endMinute0.form-control(type='select', placeholder='', name='endMinuteSelection0', required='true')
          for mTime in minutes
            option(value=mTime._id) #{mTime.name}
        select#endAmPm0.form-control(type='select', placeholder='', name='endAmPmSelection0', required='true')
          for amPmSel in amPms
            option(value=amPmSel._id) #{amPmSel.name}

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error
